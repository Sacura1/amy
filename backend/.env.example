# ============================================
# Server Configuration
# ============================================
PORT=3001
FRONTEND_URL=http://localhost:3000

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection (optional - will use JSON files if not provided)
PGHOST=
PGDATABASE=
PGUSER=
PGPASSWORD=
PGPORT=5432

# ============================================
# Authentication & Security
# ============================================
# X (Twitter) OAuth - Get from https://developer.x.com/
X_CLIENT_ID=your_x_client_id
X_CLIENT_SECRET=your_x_client_secret

# Admin wallet addresses (comma-separated, lowercase)
ADMIN_WALLETS=0xYourAdminWallet1,0xYourAdminWallet2

# Session secret (generate a random string)
SESSION_SECRET=your_random_session_secret_here

# ============================================
# Email Configuration (SendGrid)
# ============================================
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@yourdomain.com

# ============================================
# Blockchain Configuration
# ============================================
# AMY Token Contract Address
AMY_TOKEN_ADDRESS=0x098a75bAedDEc78f9A8D0830d6B86eAc5cC8894e

# RPC Endpoint for Berachain
RPC_URL=https://bartio.rpc.berachain.com/

# ============================================
# Google Sheets Integration (Leaderboard Auto-Update)
# ============================================
# Your Google Spreadsheet ID (from the URL)
# Example: https://docs.google.com/spreadsheets/d/SPREADSHEET_ID/edit
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here

# Sheet range to fetch data from (default: Sheet1!A2:D)
# Format: SheetName!StartCell:EndCell
# A2:D means columns A-D starting from row 2 (skipping header)
GOOGLE_SHEETS_RANGE=Sheet1!A2:D

# Authentication Method 1: API Key (for public sheets - easiest)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_SHEETS_API_KEY=your_google_api_key_here

# Authentication Method 2: Service Account (for private sheets - more secure)
# Get from: https://console.cloud.google.com/iam-admin/serviceaccounts
# Paste the entire JSON content as a single line, or use a file (google-service-account.json)
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}

# Timezone for cron job (default: UTC)
# Examples: America/New_York, Europe/London, Asia/Tokyo
# See: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
CRON_TIMEZONE=UTC

# ============================================
# External APIs
# ============================================
# CoinGecko API (for price data)
COINGECKO_API_KEY=

# ============================================
# Feature Flags
# ============================================
# Minimum AMY balance required
MINIMUM_AMY_BALANCE=300
